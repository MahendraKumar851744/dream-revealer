<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_above="@+id/bannerplacer"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:id="@+id/header"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/back__1_"/>
                <TextView
                    android:id="@+id/title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_50sdp"
                    android:text="TITLE"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp" />


            </RelativeLayout>

            <ImageView
                android:id="@+id/iv"
                android:layout_width="@dimen/_180sdp"
                android:layout_below="@+id/header"
                android:padding="@dimen/_5sdp"
                android:layout_height="@dimen/_130sdp"
                android:src="@drawable/group_52310"/>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/title2"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="false"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp" />

                <ImageView
                    android:id="@+id/speaker"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/volume__1_" />


            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_5sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Possible Meanings:"
                        android:textColor="@color/dark_blue"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_13ssp"
                        android:fontFamily="@font/poppins_semibold"/>
                    <TextView
                        android:id="@+id/pm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Being chased by an enemy in a dream can signify feelings of being threatened, trapped, or overwhelmed in your waking life. This kind of dream often reflects the emotional or psychological burdens you're carrying. It may symbolize unresolved issues, conflicts, or fears that you're avoiding. The enemy figure represents the stressor or obstacle that you perceive as a threat."
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_11ssp"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_medium"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Direction: "
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_13ssp"
                        android:fontFamily="@font/poppins_semibold"/>
                    <TextView
                        android:id="@+id/eo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark_blue"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:textSize="@dimen/_11ssp"
                        android:fontFamily="@font/poppins_medium"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/bannerplacer">
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView3"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner3">
        </com.google.android.gms.ads.AdView>

    </FrameLayout>




    <ProgressBar
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:indeterminate="true"
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:indeterminateTint="@color/yellow"
        android:layout_centerInParent="true" />


</RelativeLayout>