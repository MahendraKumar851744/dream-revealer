<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Act_PaidVersion">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:id="@+id/header"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/back__1_"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Privacy Policy"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />


    </RelativeLayout>
    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="@dimen/_10sdp"
        android:src="@drawable/group_1502"/>

    <TextView
        android:id="@+id/Apppermisions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv"
        android:layout_centerInParent="true"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="App Permissions"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textSize="@dimen/_16ssp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="@dimen/_10sdp"
        android:layout_below="@+id/Apppermisions">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="Permissions required by the App and its uses"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_11ssp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="• INTERNET: "
            android:layout_marginVertical="@dimen/_5sdp"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:layout_marginVertical="@dimen/_5sdp"
            android:text="It is required to read the latest content and show ads in the app. •"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_9ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="• ACCESS NETWORK STATE: "
            android:layout_marginVertical="@dimen/_5sdp"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:layout_marginVertical="@dimen/_5sdp"
            android:text="The app needs this permission to check whether the internet is available or not before checking the update of readings."
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_9ssp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="• Contact Us:  "
            android:layout_marginVertical="@dimen/_5sdp"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:layout_marginVertical="@dimen/_5sdp"
            android:text="If you have any questions or suggestions about our App Permissions, do not hesitate to contact us at feedback@DREAM REVEALER.com"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_9ssp" />
    </LinearLayout>






</RelativeLayout>