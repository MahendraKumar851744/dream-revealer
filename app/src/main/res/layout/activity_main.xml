<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:id="@+id/header"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/menu"
            android:layout_width="@dimen/_22sdp"
            android:padding="@dimen/_1sdp"
            android:layout_height="@dimen/_22sdp"
            android:src="@drawable/group_198"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_50sdp"
            android:text="DREAM REVEALER"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_above="@+id/adView3"
        android:layout_below="@+id/header"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_5sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv1"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:paddingVertical="@dimen/_30sdp"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:src="@drawable/dreams"
                            android:layout_height="@dimen/_50sdp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="Dream Meanings"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/_11ssp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv2"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingVertical="@dimen/_30sdp"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:src="@drawable/book__2_"
                            android:layout_height="@dimen/_50sdp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="Dream Book"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/_11ssp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_margin="@dimen/_5sdp"

                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_toLeftOf="@+id/askDream"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/ll"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:background="@color/dark_blue"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/iv1"
                                android:layout_width="@dimen/_60sdp"
                                android:padding="@dimen/_10sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:src="@drawable/dream_catcher"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:layout_toRightOf="@+id/ll"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="center"
                                android:text="Ask Your Dream"
                                android:textColor="@color/dark_blue"
                                android:textSize="@dimen/_10ssp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:text="Discover your dreams meaning!"
                                android:textColor="#8391A4"
                                android:textSize="@dimen/_8ssp" />
                        </LinearLayout>

                    </LinearLayout>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/askDream"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        app:cardBackgroundColor="@color/yellow"
                        app:cardCornerRadius="@dimen/_5sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:text="Ask Now"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/_11ssp" />
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv4"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:paddingVertical="@dimen/_30sdp"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:src="@drawable/group_34"
                            android:layout_height="@dimen/_50sdp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="Psychological Facts"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/_11ssp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv3"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingVertical="@dimen/_30sdp"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:src="@drawable/brain"
                            android:layout_height="@dimen/_50sdp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="Today Affirmation"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/_11ssp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:id="@+id/fl_adplaceholder"
                android:layout_height="wrap_content">

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="#80000000"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:paddingVertical="@dimen/_30sdp"
                            android:paddingHorizontal="@dimen/_10sdp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_50sdp"
                                android:src="@drawable/music"
                                android:layout_height="@dimen/_50sdp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Healing Sounds"
                                android:textColor="@color/dark_blue"
                                android:textSize="@dimen/_11ssp" />

                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_3sdp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:layout_marginVertical="@dimen/_3sdp"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center"
                                android:text="Coming Soon"
                                android:textColor="@color/dark_blue"
                                android:textSize="@dimen/_10ssp" />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="#80000000"
                        android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingVertical="@dimen/_30sdp"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:src="@drawable/tasbih"
                            android:layout_height="@dimen/_50sdp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="Divine Prayers"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/_11ssp" />

                    </LinearLayout>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_3sdp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center"
                                android:text="Coming Soon"
                                android:layout_marginVertical="@dimen/_3sdp"
                                android:textColor="@color/dark_blue"
                                android:textSize="@dimen/_10ssp" />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="#80000000"
                        android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:paddingVertical="@dimen/_30sdp"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/_50sdp"
                                    android:src="@drawable/dream__2_"
                                    android:layout_height="@dimen/_50sdp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:gravity="center"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="Dream Wiki"
                                    android:textColor="@color/dark_blue"
                                    android:textSize="@dimen/_11ssp" />

                            </LinearLayout>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_3sdp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center"
                                android:text="Coming Soon"
                                android:layout_marginVertical="@dimen/_3sdp"
                                android:textColor="@color/dark_blue"
                                android:textSize="@dimen/_10ssp" />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="#80000000"
                        android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingVertical="@dimen/_30sdp"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:src="@drawable/schedule"
                            android:layout_height="@dimen/_50sdp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="Dreams Calender"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/_11ssp" />

                    </LinearLayout>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_3sdp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center"
                                android:text="Coming Soon"
                                android:layout_marginVertical="@dimen/_3sdp"
                                android:textColor="@color/dark_blue"
                                android:textSize="@dimen/_10ssp" />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView3"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner3">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>