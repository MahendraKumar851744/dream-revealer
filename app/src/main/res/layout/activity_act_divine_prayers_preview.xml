<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Activity_Intro">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:id="@+id/header"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/back__1_"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_50sdp"
            android:text="Divine Prayers"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />



    </RelativeLayout>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_below="@+id/header"
            android:layout_above="@+id/bannerplacer"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:id="@+id/lay2">
                <ImageView
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_200sdp"
                    android:id="@+id/iv1"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:src="@drawable/group_3085"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv1"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/white">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"

                            android:paddingVertical="@dimen/_10sdp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="center"
                                android:layout_marginHorizontal="@dimen/_40sdp"
                                android:text="Divine Prayers"
                                android:textColor="@color/dark_blue"
                                android:textSize="@dimen/_16ssp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:paddingHorizontal="@dimen/_15sdp"
                                android:text="@string/content7"
                                android:gravity="center_horizontal"
                                android:textColor="@color/dark_blue"
                                android:textSize="@dimen/_11ssp" />
                            <androidx.cardview.widget.CardView
                                android:id="@+id/next"
                                android:layout_width="match_parent"
                                app:cardCornerRadius="@dimen/_5sdp"
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/yellow">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:paddingVertical="@dimen/_6sdp"
                                    android:gravity="center"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12ssp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:textColor="@color/dark_blue"
                                    android:text="NEXT"/>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>



                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/bannerplacer">
            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView3"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner3">
            </com.google.android.gms.ads.AdView>

        </FrameLayout>



    <ProgressBar
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:indeterminate="true"
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:indeterminateTint="@color/yellow"
        android:layout_centerInParent="true" />

</RelativeLayout>