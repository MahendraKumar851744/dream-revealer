<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_280sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#00FFFFFF"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--    <LinearLayout-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_marginVertical="@dimen/_10sdp"-->
        <!--        android:background="#00FFFFFF"-->
        <!--        android:layout_height="wrap_content">-->
        <!--        <androidx.cardview.widget.CardView-->
        <!--            android:layout_width="match_parent"-->
        <!--            app:cardCornerRadius="@dimen/_10sdp"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginHorizontal="@dimen/_10sdp"-->
        <!--            android:layout_marginTop="@dimen/_25sdp"-->
        <!--            app:cardBackgroundColor="#00FFFFFF">-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/rounded_corner2"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingVertical="@dimen/_20sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_20sdp"
                    android:textColor="@color/dark_blue"
                    android:text="Show Your Love by Liking us!"
                    android:textSize="@dimen/_13ssp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_20sdp"
                    android:text="Your support &amp; appreciation means a lot to us &amp; all the hard work we put in this app!"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/star1"
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="@dimen/_26sdp"
                        android:layout_marginHorizontal="@dimen/_3sdp"
                        android:src="@drawable/star"/>
                    <ImageView
                        android:id="@+id/star2"
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="@dimen/_26sdp"
                        android:layout_marginHorizontal="@dimen/_3sdp"
                        android:src="@drawable/star"/>
                    <ImageView
                        android:id="@+id/star3"
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="@dimen/_26sdp"
                        android:layout_marginHorizontal="@dimen/_3sdp"
                        android:src="@drawable/star"/>
                    <ImageView
                        android:id="@+id/star4"
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="@dimen/_26sdp"
                        android:layout_marginHorizontal="@dimen/_3sdp"
                        android:src="@drawable/star"/>
                    <ImageView
                        android:id="@+id/star5"
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="@dimen/_26sdp"
                        android:layout_marginHorizontal="@dimen/_3sdp"
                        android:src="@drawable/star"/>
                </LinearLayout>


                <TextView
                    android:id="@+id/lay1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:fontFamily="@font/poppins"
                    android:layout_marginVertical="@dimen/_8sdp"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_20sdp"
                    android:text="Please share your suggestions with us to improve the app."
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_11ssp" />

                <LinearLayout
                    android:id="@+id/lay2"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/ok"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/yellow"
                        android:layout_marginHorizontal="@dimen/_20sdp"
                        app:cardCornerRadius="@dimen/_5sdp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:paddingVertical="@dimen/_4sdp"
                            android:text="Ok"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/_14ssp" />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/later"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:layout_marginVertical="@dimen/_3sdp"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/_20sdp"
                        android:text="Later"
                        android:textColor="#8391A4"
                        android:textSize="@dimen/_11ssp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lay3"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:layout_marginVertical="@dimen/_5sdp"
                        app:cardBackgroundColor="#DDDDDD"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="1dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="10dp"
                            android:orientation="vertical">
                            <EditText
                                android:id="@+id/email"
                                android:paddingHorizontal="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppins"
                                android:textColorHint="#8391A4"
                                android:textColor="#000000"
                                android:textSize="@dimen/_10ssp"
                                android:textStyle="bold"
                                android:background="#00FFFFFF"
                                android:hint="Please enter your Email Id here..." />
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/poppins_medium"
                        android:gravity="end"
                        android:layout_marginHorizontal="@dimen/_20sdp"
                        android:text="Your email will only be used to reply you."
                        android:textColor="#8391A4"
                        android:textSize="@dimen/_8ssp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:layout_marginVertical="@dimen/_5sdp"
                        app:cardBackgroundColor="#DDDDDD"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="1dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="10dp"
                            android:minHeight="@dimen/_60sdp"

                            android:orientation="vertical">
                            <EditText
                                android:id="@+id/feedback"
                                android:paddingHorizontal="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppins"
                                android:textColorHint="#8391A4"
                                android:textColor="#000000"
                                android:textSize="@dimen/_10ssp"
                                android:textStyle="bold"
                                android:background="#00FFFFFF"
                                android:hint="Please enter your feedback here...*" />
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/yellow"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginHorizontal="@dimen/_20sdp"
                        app:cardCornerRadius="@dimen/_5sdp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:paddingVertical="@dimen/_4sdp"
                            android:text="Submit"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/_14ssp" />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/pp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:layout_marginVertical="@dimen/_3sdp"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/_20sdp"
                        android:text="Privacy Policy"
                        android:textColor="#8391A4"
                        android:textSize="@dimen/_11ssp" />

                </LinearLayout>

            </LinearLayout>


        
        </RelativeLayout>
        <!--        </androidx.cardview.widget.CardView>-->
        <!--    </LinearLayout>-->


        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/app_icon"/>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_14sdp"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/_10sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/path_7133" />
    </RelativeLayout>


</LinearLayout>